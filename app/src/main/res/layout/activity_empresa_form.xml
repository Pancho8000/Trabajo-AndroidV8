<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmpleadorFormActivity">

    <!-- Imagen de fondo -->
    <ImageView
        android:id="@+id/backgroundImageEmpleador"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/login" />

    <TextView
        android:id="@+id/empleadorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro como Empresa"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo Nombre de la Empresa -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nombreEmpresaInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre de la Empresa"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="32dp"
        app:boxStrokeColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/empleadorTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nombreEmpresaEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo Correo de la Empresa -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/correoEmpresaInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Correo de la Empresa"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        app:boxStrokeColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/nombreEmpresaInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/correoEmpresaEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo Contrase침a -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/contrasenaEmpresaInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Contrase침a"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        app:boxStrokeColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/correoEmpresaInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/contrasenaEmpresaEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Bot칩n Siguiente -->
    <Button
        android:id="@+id/btnSiguienteEmpresa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/green_primary"
        android:text="Siguiente"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contrasenaEmpresaInputLayout" />

    <!-- Bot칩n Volver -->
    <Button
        android:id="@+id/btnVolverEmpresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Volver"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>



