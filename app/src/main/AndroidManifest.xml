<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tinderempleosapp">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TinderEmpleosApp">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity" android:exported="false"></activity>
        <activity android:name=".SignupActivity" android:exported="false"></activity>
        <activity android:name=".userFormActivity" android:exported="true"></activity>
        <activity android:name=".UserInfoActivity" android:exported="true"></activity>
        <activity android:name=".CompanyInfoActivity" android:exported="true"></activity>
        <activity android:name=".EmpleadorFormActivity" android:exported="true"></activity>
        <activity android:name=".UserProfileActivity" android:exported="true"></activity>
        <activity android:name=".CompanyProfileActivity" android:exported="true"></activity>
        <activity android:name=".AdminSignupActivity" android:exported="true"></activity> <!-- Aquí está la nueva actividad -->
    </application>
</manifest>
